<h1>Editar Comunidad</h1>

<%= form_for @comunidad, :url =>{:action => "update", :id =>@comunidad} do |f| %>
	<p>Nombre: <%= f.text_field 'nombre' %></p>
	<p>Comuna: <%= f.text_field 'comuna' %></p>
	<p>Proyectos: 
		<% if @comunidad.proyectos == 0 %>
			No hay proyecto
		<%end%>
	</p>
	<p>Description<br/>
	<%= f.text_area 'description' %></p>
	<%= f.submit "Save changes" %>
	<% end %>
<%= link_to 'Back', {:action => 'list' } %>